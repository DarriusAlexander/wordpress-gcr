{
  "name": "wordpress-gcr",
  "env": {
      "DB_HOST": {
          "description": "(external exposed) IP address of MySQL Database.",
          "value": "localhost",
          "required": true
      },
      "DB_USER": {
          "description": "MySQL Database username",
          "value": "root",
          "required": true
      },
      "DB_PASSWORD": {
          "description": "MySQL Database password",
          "value": "password",
          "required": true
      },
      "DB_NAME": {
          "description": "The name of the database for WordPress",
          "value": "wordpress",
          "required": true
      },
      "CLOUDSQL_INSTANCE": {
          "description": "Cloud SQL in the format <project.id>:<region>:<instance-name>",
          "value": "",
          "required": false
      }
  }
}
